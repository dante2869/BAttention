@model IEnumerable<Sln.Models.VResultado>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="title">
    <div class="container">
        <div class="row-fluid">
            <div class="span6">
                <h1>Reportes</h1>
            </div>
            <div class="span6">
                <ul class="breadcrumb pull-right">
                    <li><a href="index.html">Inicio</a> <span class="divider">/</span></li>
                    <li><a href="#">Administración</a> <span class="divider">/</span></li>
                    <li class="active">Reportes</li>
                </ul>
            </div>
        </div>
    </div>
</section>
<section id="portfolio" class="container main">
    <p>&nbsp;</p>
    <div class="row-fluid">
        <div class="span4">
            <label>Tratamiento</label>
            @Html.DropDownList("Tratamiento", new SelectList(ViewBag.Tratamiento, "Key", "Value"), "Seleccione")
        </div>

        <div class="span4">
            <label>Actividad</label>
            @Html.DropDownList("Actividad", new SelectList(ViewBag.Actividad, "Key", "Value"), "Seleccione")
        </div>

        <div class="span4">
            <label>Paciente</label>
            @Html.DropDownList("Usuario", new SelectList(ViewBag.Usuario, "Key", "Value"), "Seleccione")
        </div>
    </div>
    
    <table id="datos" class="table table-striped table-hover ">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TRATAMIENTO)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ACTIVIDAD)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PACIENTE)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EDAD)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SEXO)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ACIERTOS)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ERRORES)
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr class="datosTable">
                <td>
                    @Html.DisplayFor(modelItem => item.TRATAMIENTO)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ACTIVIDAD)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PACIENTE)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EDAD)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SEXO)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ACIERTOS)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ERRORES)
                </td>
            </tr>
        }

    </table>
</section>
@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            var str = "";
            $("select").change(function () {
                var data = {
                    'TRATAMIENTO': $("#Tratamiento option:selected").text().replace('Seleccione', ''),
                    'ACTIVIDAD': $("#Actividad option:selected").text().replace('Seleccione', ''),
                    'PACIENTE': $("#Usuario option:selected").text().replace('Seleccione', '')
                };
                $.ajax({
                    contentType: 'application/x-www-form-urlencoded',
                    type: 'POST',
                    url: '../Reportes/ListaFiltros',
                    data: data,
                    success: function (lista) {
                        $(".datosTable").remove();
                        $.each(lista, function (id, item) {
                            $('#datos tr:last').after('<tr class="datosTable"><td>' + item.TRATAMIENTO + '</td><td>' + item.ACTIVIDAD + '</td><td>' + item.PACIENTE + '</td><td>' + item.EDAD + '</td><td>' + item.SEXO  + '</td><td>' + item.ACIERTOS + '</td><td>' + item.ERRORES + '</td></tr>');
                        });
                    }
                });
            });
        });
    </script>
}

